@using Mvc_Proje1YT.Models.Entity
@model List<TBLMUSTERİLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index" , "Musteri", FormMethod.Get))
            {
    <p>
        Aranacak Müşteri Adı: @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>
            }


<table class="table table-bordered">s
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>

    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>

                <th>@mus.MUSTERİID</th>
                <td>@mus.MUSTERİAD</td>
                <td>@mus.MUSTERİSOYAD</td>
                <td> <a href="/Musteri/SİL/@mus.MUSTERİID" class="btn btn-danger">SİL</a></td>
                <td> <a href="/Musteri/MusteriGetir/@mus.MUSTERİID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SİL BUTONU", "SİL", new { id= mus.MUSTERİID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor Musun')" })</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Musteri/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>